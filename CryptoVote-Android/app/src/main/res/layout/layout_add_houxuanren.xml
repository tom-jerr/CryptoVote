<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/text_14_101010_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_14"
        android:text="添加候选人"
        android:textColor="#000000"
        android:textSize="@dimen/dp_17"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp10"
        android:background="#bbbbbb" />

    <com.example.toupiao.view.CircleImageView
        android:id="@+id/ivHead"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_zhanweitu"
        app:onlyDrawBorder="false"
        app:roundRadius="@dimen/dp_4"
        app:shape="rectangle" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/gray_biankuang_4_shape"
        android:gravity="center"
        android:hint="请输入姓名"
        android:paddingVertical="@dimen/dp10"
        android:textColor="@color/_101010"
        android:textColorHint="@color/gray3"
        android:textSize="@dimen/dp_14" />
    <EditText
        android:id="@+id/introName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/gray_biankuang_4_shape"
        android:gravity="center"
        android:hint="请输入简介"
        android:paddingVertical="@dimen/dp10"
        android:textColor="@color/_101010"
        android:textColorHint="@color/gray3"
        android:textSize="@dimen/dp_14" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/login_button_shape"
        android:gravity="center"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>