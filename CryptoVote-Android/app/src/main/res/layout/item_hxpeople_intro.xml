<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/dp_14">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="wrap_content"
        android:paddingHorizontal="@dimen/dp_14"
        android:layout_height="wrap_content">

        <com.example.toupiao.view.CircleImageView
            android:id="@+id/ivHead"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_zhanweitu" />

        <LinearLayout
            android:layout_toRightOf="@+id/ivHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="毛衣"
                android:textColor="@color/_101010"
                android:textSize="@dimen/dp_14"
                android:layout_weight="1"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/introName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/gray_biankuang_4_shape"
        android:gravity="center"
        android:paddingVertical="@dimen/dp10"
        android:textColor="@color/_101010"
        android:textColorHint="@color/gray3"
        android:textSize="@dimen/dp_14" />



</LinearLayout>