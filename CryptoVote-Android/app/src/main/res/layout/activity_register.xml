<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
<include layout="@layout/top_include"/>
    <com.example.toupiao.view.CircleImageView
        android:id="@+id/iv_fengmian"
        android:layout_width="90dp"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo" />
    <EditText
        android:id="@+id/etPhone"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/gray_biankuang_4_shape"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textColorHint="@color/gray3" />

    <EditText
        android:id="@+id/etPsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gray_biankuang_4_shape"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textColorHint="@color/gray3" />
    <EditText
        android:id="@+id/etPswOnce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gray_biankuang_4_shape"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textColorHint="@color/gray3" />
    <Button
        android:id="@+id/btRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="注册"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginHorizontal="90dp"
        android:background="@drawable/blue_button_shape" />

</LinearLayout>